{
  "$schema": "https://biomejs.dev/schemas/1.4.0/schema.json",
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
			"suspicious": {
				"noExplicitAny": "warn"
			}
    }
  },
	"formatter": {
		"indentWidth": 2,
		"lineWidth": 120,
		"enabled": true
	},
	"javascript": {
		"formatter": {
			"semicolons": "asNeeded",
			"quoteStyle":"single",
			"trailingComma": "none"
		}
	}
}